{
  "manifest_version": 3,
  "name": "AIGC Tool",
  "version": "1.2.1",
  "description": "Show popup only on YouTube pages (watch/shorts).",
  "action": {
    "default_title": "AIGC",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "permissions": ["tabs", "webNavigation"],
  "host_permissions": ["https://www.youtube.com/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.css",
        "popup.js",
        "data.json",
        "assets/*",
        "assets/**"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
